#!/bin/bash

# Log arguments for debugging
echo "[mock-ovsx] Called with: $@" >> /tmp/ovsx-mock.log

if [[ "$1" == "publish" ]]; then
    echo "Publishing extension..."
    # Verify token is passed
    if [[ "$*" != *"-p"* ]]; then
        echo "Error: Missing token"
        exit 1
    fi
    echo "Extension published successfully!"
else
    echo "Unknown command: $@"
    exit 1
fi
